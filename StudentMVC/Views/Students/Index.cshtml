@model IEnumerable<StudentMVC.Models.Entities.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if(Model != null){
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
           <th>
                Name
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            
                var name = item.FirstName +" " + item.LastName; 
            
        <tr>
            <td>
                        @Html.DisplayFor(modelItem => item.SId)
            </td>
             <td>
                @name
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
                    <td>
                        <a class="btn btn-light" asp-controller="Students" asp-action="Edit" asp-route-id="@item.SId">
                            <i class="text-danger fa-solid fa-user-pen"></i>
                        </a>
                        <a class="btn btn-light" asp-controller="Students" asp-action="Delete" asp-route-id="@item.SId">
                            <i class="text-danger fa-solid fa-trash"></i>
                        </a>
                        <a class="btn btn-light" asp-controller="Students" asp-action="Show" asp-route-id="@item.SId">
                            <i class="text-danger fa-solid fa-circle-info"></i>
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else{
    <h3>Empty Data</h3>
}

