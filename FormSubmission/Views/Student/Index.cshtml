@model IEnumerable<FormSubmission.Models.Entities.Student>



<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cgpa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var student in Model) {
        <tr>
            <td>
                @Html.DisplayFor(item => student.Name)
            </td>
            <td>
                @Html.DisplayFor(x => student.Email)
            </td>
            <td>
                @Html.DisplayFor(y => student.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.Cgpa)
            </td>
            <td>
                    <a class="btn btn-light" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">
                        <i class="text-danger fa-solid fa-user-pen"></i>
                    </a>
                    <a class="btn btn-light" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">
                        <i class="text-danger fa-solid fa-trash"></i>
                    </a>
                    <a class="btn btn-light" asp-controller="Student" asp-action="Details" asp-route-id="@student.Id">
                        <i class="text-danger fa-solid fa-circle-info"></i>
                    </a>

                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
